{
  "name": "rootspec",
  "version": "4.3.0",
  "description": "Hierarchical Specification Framework - Philosophy guides implementation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rootspec": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs-extra');fs.copySync('../../00.SPEC_FRAMEWORK.md','dist/00.SPEC_FRAMEWORK.md');fs.copySync('../../UPGRADE.md','dist/UPGRADE.md');fs.copySync('../../prompts','dist/prompts');fs.copySync('../../templates','dist/templates')\"",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "specification",
    "framework",
    "architecture",
    "design",
    "documentation",
    "cypress",
    "testing"
  ],
  "author": "Corky Brown",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rootspec/rootspec.git"
  },
  "homepage": "https://github.com/rootspec/rootspec",
  "bugs": {
    "url": "https://github.com/rootspec/rootspec/issues"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
